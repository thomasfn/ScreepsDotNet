{
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "module": "node16",
        "sourceMap": false,
        "target": "ES2022",
        "moduleResolution": "node16",
        "strict": true,
        "lib": [
            "esnext",
            "DOM"
        ],
        "rootDirs": [
            "."
        ],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.mts"
    ],
    "exclude": [
        "src/**/*.d.ts"
    ]
}